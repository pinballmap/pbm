/* ic_toggle */

.ic_button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 220px;
  text-align: center;
  box-shadow: 2px 5px 10px var(--shadow);
  -moz-box-shadow: 2px 5px 10px var(--shadow);
  -webkit-box-shadow: 2px 5px 10px var(--shadow);
  padding: 5px 10px;
  @include radius(10px);
  margin: 20px auto 0;
  border: none;
  height: 26px;
  font-family: $Nunito_600SemiBold;
}

.ic_button:hover:after {
  content: "Toggle Insider Connected Status";
  position: absolute;
  line-height: 14px;
  font-size: 16px;
  margin-left: 480px;
  width: 260px;
  margin-top: 0px;
  background: var(--darkblue);
  color: var(--vlightpurple);
  padding: 5px;
  font-family: $Nunito_600SemiBold;
}

.ic_button.ic_yes {
  color: #440152;
  background: #e3fae5;
}

.ic_button.ic_yes:hover {
  color: #440152;
  background: #bff3c3;
}

.ic_button.ic_no {
  color: #533a3a;
  background: #f0d8d8;
}

.ic_button.ic_no:hover {
  color: #3d2a2a;
  background: #dfbfbf;
}

.ic_button.ic_unknown {
  color: #665b50;
  background: #e4dddd;
}

.ic_button.ic_unknown:hover {
  color: #4e4236;
  background: #d6caca;
}

.ic_yes:before {
  content: "Has";
  background: url(<%= asset_path 'icons/ic_yes.svg' %>);
  background-repeat: no-repeat;
  background-position: 0 1px;
  padding-left: 18px;
  background-size: 15px;
  position: relative;
  white-space: nowrap;
  margin-right: 3px;
}

.ic_no:before {
  content: "Not";
  background: url(<%= asset_path 'icons/ic_no.svg' %>);
  background-repeat: no-repeat;
  background-position: -1px -1px;
  padding-left: 20px;
  background-size: 18px;
  position: relative;
  white-space: nowrap;
  margin-right: 3px;
}

.ic_unknown:before {
  content: "\00a0";
  background: url(<%= asset_path 'icons/ic_unknown.svg' %>);
  background-repeat: no-repeat;
  background-position: -1px 0;
  padding-left: 20px;
  background-size: 18px;
  position: relative;
  white-space: nowrap;
  margin-right: 3px;
}

