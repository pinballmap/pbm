  padding: 1px 5px;
}

.ui-autocomplete {
  max-height: 230px;
  overflow-y: auto;
  overflow-x: hidden;
  position: fixed;
  border: 1px solid #aaa !important;
}

.ui-state-active,
.ui-widget-content .ui-state-active,
.ui-widget-header .ui-state-active,
.ui-autocomplete,
.ui-autocomplete:hover,
.ui-menu-item,
.ui-menu-item:hover,
.ui-menu-item a,
.ui-menu-item a:hover,
.ui-widget-content .ui-state-focus,
.ui-widget-header .ui-state-focus,
.ui-widget-content .ui-state-hover,
.ui-widget-header .ui-state-hover,
.ui-menu .ui-menu-item a.ui-state-focus,
.ui-menu .ui-menu-item a.ui-state-active,
.ui-menu .ui-menu-item a {
  background: var(--white) none no-repeat;
  margin: 0;
  display: block;
  border: 0;
  border-collapse: collapse;
  color: var(--black);
}

.ui-menu-item:hover,
.ui-menu-item a:hover {
background: var(--lightpurple);
padding: 1px 5px;
color: var(--black);
}

.ui-menu-item-wrapper:hover,
.ui-menu-item-wrapper:active,
.ui-menu-item-wrapper:focus {
  background: var(--lightpurple);
  color: var(--black);
}

/** Promote **/
#page_body.promote_body {
  width: 800px;
  max-width: 800px;
  min-width: 800px;
  margin-bottom: 20px;
}

#promote_container {
  text-align: center;
}

.promote_subcontainer {
  margin: 10px;
  height: calc(50% - 20px);
  float: left;
  padding: 8px;
  width: calc(50% - 20px);
  border: 2px solid var(--black);
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

#promote_container img.promote_logo,
#promote_container p {
  width: 100%;
}

#promote_container p.promote_logo {
  line-height: 0;
}

#promote_container img.app_logo {
  width: 65%;
}

/* Jump to top button */

#top_button {
  display: none;
  position: fixed;
  bottom: 30px;
  left: 30px;
  z-index: 99; 
  border: none;
  outline: none;
  background-color: var(--brightpurple); 
  color: var(--white); 
  cursor: pointer; 
  font-family: $Nunito_700Bold;
  padding: 10px; 
  border-radius: 10px; 
  font-size: 18px; 
  box-shadow: 5px 5px 5px var(--shadow);
}

#top_button:hover {
  background-color: #555;
}

/** Pagy **/

.pagy {
  display: flex;
  justify-content: center;
  font-family: sans-serif;
  font-size: 0.875rem;
  line-height: 1.25rem;
  font-weight: 600;
  color: var(--darkblue);
  & > :not([hidden]) ~ :not([hidden]) {
    --space-reverse: 0;
    margin-right: calc(0.25rem * var(--space-reverse));
    margin-left: calc(0.25rem * calc(1 - var(--space-reverse)));
  }

  a:not(.gap) {
    display: block;
    text-decoration: none;
    border-radius: 0.5rem;
    background-color: var(--purple);
    padding: 0.25rem 0.75rem;
    color: inherit;
    &:hover {
      background-color: var(--red);
    }
    &:not([href]) { /* disabled links */
      cursor: default;
      background-color: var(--lightpink);
      color: var(--grey);
    }
    &.current {
      background-color: var(--brightpurple);
      color: var(--white);
    }
  }

  label {
    white-space: nowrap;
    display: inline-block;
    border-radius: 0.5rem;
    background-color: rgb(229, 231, 235);
    padding: 0.125rem 0.75rem;
    input {
      line-height: 1.5rem;
      border-radius: 0.375rem;
      border-style: none;
      background-color: rgb(243, 244, 246);
    }
  }
}
