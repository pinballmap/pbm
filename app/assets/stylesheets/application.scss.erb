#menu_container {
  box-shadow: 5px 10px 10px var(--shadow);
  width: 180px;
  background: var(--bg_vlightpurple);
  position: absolute;
  top: 52px;
  left: 0;
  transform: translateX(-190px);
  transition: transform 250ms ease-in-out;
  z-index: 200;
}

#menu:checked~#menu_container {
  transform: translateX(0);
}

#header hr {
  height: 1px;
  background: var(--red);
  border: 0;
}

#header #menu_button {
  margin-top: -8px;
