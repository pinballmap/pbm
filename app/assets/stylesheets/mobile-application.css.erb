#map_canvas {
  height: 100% !important;
}
#lookup_map, #container {
  margin: 0 auto;
  width: auto;
  min-width: 320px;
}
#header {
  position: relative;
  box-shadow: none;
  width: auto;
  min-width: 320px;
  height: auto;
  text-align: center;
  background-color: #ece2d8;
  margin: 0 auto;
}
#header a img {
  float: none;
  padding: 0;
  width: 100%;
  max-width: 460px;
}
#header span.menu_link {
  width: auto !important;
  position: relative;
  visibility: hidden;
  line-height: 0;
}
#header span.menu_link ul {
  display: inline-block;
  margin: 0 auto 10px;
  padding: 0;
  float: none;
  width: 100%;
  min-width: 320px;
  background-color: #ece2d8;
  text-align: center;
  visibility: visible;
  box-shadow: none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  width: auto !important;
}
#header span.menu_link ul:before,
#header span.menu_link ul span {
  display: none;
}
#header span.menu_link ul li {
  display: inline;
  line-height: 24px;
  background: none;
}
#header span.menu_link ul li a {
  float: none;
  display: inline;
  background: transparent;
  font-size: 16px !important;
  border: none;
}
#header span.menu_link ul li:nth-child(4):after { 
  content: ''; 
  white-space:normal; 
}
#header span.menu_link ul li.other_links_list,
#header span.menu_link ul:hover li {
  display: inline;
}
#header span.menu_link ul:hover {
  display: inline-block;
}
#header ul.other_links_dropdown {
  display: inline !important;
  background: none;
  font-size: 16px;
  width: auto;
}
.other_regions {
  margin: 0 auto;
  width: 100%;
  font-size: 20px;
}
.closest_locations {
  font-size: 22px;
  border: 2px solid #d6c0aa;
  background-color: #f7f3ef;
  width: auto;
  float: none !important;
  display: block;
  line-height: 13px;
  padding: 10px 6px;
}
#header span.region_name_page a {
  font-size: 30px;
}

#header.header_home, #header.header_image_home {
  min-width: 320px;
  padding: 0;
  height: auto;
}

.header_image_a {
  display: block;
}

#header .region_logo_dropdown {
    float: none;
    background: #ece2d8;
    width: auto;
}

.pick_a_map span.pick_a_map {
  display: none;
}

div.pick_a_map {
  padding-top: 0;
}
.apps_header, .blog_header, .store_header, .geo_header {
  width: 100% !important;
  float: none;
  padding: 4px 0 4px;
  text-align: center;
  border-left: none;
  border-right: none;   
  border-top: none;
  font-size: 18px !important;
  line-height: 24px !important;
}

