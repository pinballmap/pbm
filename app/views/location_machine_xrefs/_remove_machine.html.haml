%div.remove_button
  = button_to "remove machine",  location_machine_xref_path(:region => @region.name, :id => lmx.id), :id => "remove_machine_#{lmx.id}", :method => 'delete', :remote => true, :class => "remove_machine_button"

:javascript
  $('#remove_machine_#{lmx.id}').click(function () {
    if (confirm("Remove this machine?")) {
      $('#machine_lmx_#{lmx.id}').fadeOut('slow', function() {
        updateLocationUpdatedText(#{lmx.location_id}, '#{params[:region]}');
        $('#gm_machines_#{lmx.location_id}').load('/#{params[:region]}/locations/#{lmx.location_id}/render_machine_names_for_infowindow', function() {});
      });
      $(this).callRemote();
    }

    return false;
  });
