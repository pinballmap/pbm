#header{:class => "#{@region ? '' : 'header_home'}"}
  =link_to image_tag('pinballmapcom.jpg', :class => "#{@region ? 'header_image' : 'header_image_home'}"), root_path
  - if (@region)
    %span.yellowb.new_blog.new_blog_region
      = link_to 'Check out our blog!', 'http://blog.pinballmap.com'
    %div.region_logo_dropdown
      %div.other_regions
        %span.region_name_page
          =link_to "#{@region.full_name}", region_homepage_path
      %ul.other_regions_list= other_regions_html(@region)   
  %div{:class => "#{@region ? 'dont_pick_a_map' : 'pick_a_map'}"}
    %span.yellowb.new_blog
      = link_to 'Check out our blog!', 'http://blog.pinballmap.com'
    %span.pick_a_map Play Public Pinball!
  - if (@region)
    %ul
      %li.first_header_link=link_to 'About', about_path
      %li=link_to 'Suggest A New Location', suggest_path
      %li=link_to 'Apps', apps_path
      %li=link_to 'Events', events_path
      %li.other_links
        =link_to 'Location Feed', "/#{params[:region]}/location_machine_xrefs.rss", {:class => 'feed_icon'}
        %ul.other_links_dropdown
          %li.other_links_list
            =link_to 'Score Feed', "/#{params[:region]}/machine_score_xrefs.rss", {:class => 'feed_icon'}
      %li=link_to 'High Rollers', high_rollers_path
    :javascript
      jQuery().ready(function() {

        jQuery(".region_logo_dropdown").hover(function () {
            jQuery(".other_regions_list").show();
          },function(){
            jQuery(".other_regions_list").hide();
        });
        jQuery(".other_links").hover(function () {
            jQuery(".other_links_dropdown").show();
          },function(){
            jQuery(".other_links_dropdown").hide();
        });
        jQuery(document).click(function () {
            jQuery(".other_regions_list,.other_links_dropdown").hide();
        });
      });

%p.notice= notice
