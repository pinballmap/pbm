- if l.date_last_updated
  = image_tag('icons/lightning-bolt.svg', :class => 'meta_icon float_l')
  %div.last_updated
    Location updated
    = pluralize(number_with_precision(l.user_submissions_count, precision: 0, delimiter: ','), ' time')
    by
    = pluralize(number_with_precision(l.users_count, precision: 0, delimiter: ','), ' user') + "."
    Last updated:
    %span.last_updated_date #{l.date_last_updated.strftime("%b %d, %Y")}
    - if l.last_updated_by_user
      by
      %span.last_updated_username
        = link_to l.last_updated_by_user.username, "#{request.scheme}://#{request.host_with_port}/users/#{l.last_updated_by_user.username}/profile"
        - user = l.last_updated_by_user
        - if user.admin_title.present?
          %span{:class => "user_admin_container"}
            = image_tag('icons/shield-account.svg', :class => 'user_icon user_admin')
        - if l.operator_id && l.operator_id == l.last_updated_by_user.operator_id
          %span{:class => "user_operator_container"}
            = image_tag('icons/wrench.svg', :class => 'user_operator')
        - if user.contributor_rank.present?
          - rank = user.contributor_rank.gsub(' ', '')
          %span{:class => "rank_icon_#{rank}"}
            =image_tag("rank/#{rank}.png", :class => "user_icon rank_icon")
        - if !l.last_updated_by_user.flag.blank?
          %span{:class => "user_flag_container"}
            =image_tag("https://flagcdn.com/24x18/#{l.last_updated_by_user.flag}.png", :class => "user_icon user_flag", :alt => "#{l.last_updated_by_user.flag} flag")
  - if l.date_last_updated < 2.years.ago
    - dateDiff = distance_of_time_in_words(Time.now, l.date_last_updated)
    %div{:class => "stale", :id => "stale_#{l.id}"}
      No updates in
      %span.stale_bold #{dateDiff}.
      Please help update the listing!
